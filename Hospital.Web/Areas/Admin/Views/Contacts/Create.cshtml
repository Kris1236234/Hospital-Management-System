@model Hospital.ViewModels.ContactViewModel

@{
    ViewData["Title"] = "Create";
}



<h4>Utwórz Kontakt</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HospitalInfoId" class="control-label"></label>
                <select asp-for="HospitalInfoId" class="form-control" asp-items="@ViewBag.Hospitals">
                    <option value="">Wybierz Szpital</option>
                </select>
                <span asp-validation-for="HospitalInfoId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót do listy</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}