@using hospitals.Utilities
@model PagedResult<Hospital.ViewModels.ApplicationUserViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Uzytkownicy</h1>

<p>
    <a asp-action="Create">Utworz nowy</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                CzyDoktor
            </th>
            <th>
                Imie
            </th>
            <th>
                NazwaUzytkownika
            </th>
            <th>
                Email
            </th>
            <th>
              Płeć
            </th>
            <th>
               Miasto
            </th>
            <th>
               Specjalista
            </th>           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Data) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.IsDoctor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialist)
            </td>
            <td>
               @* @Html.ActionLink("Edit", "Edit", new {  id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new {  id=item.Id})*@
            </td>
        </tr>
}
    </tbody>
</table>

<cs-pager cs-paging-pagesize=(int)Model.PageSize
          cs-paging-pagenumber=(int)Model.PageNumber
          cs-paging-totalitems=(int)Model.TotalItems
          cs-pagenumber-param="pageNumber"
          asp-controller="Hospitals"
         
          asp-action="Index"          
          cs-pager-li-current-class="page-item active"
          cs-pager-li-other-class="page-item"
          cs-pager-li-non-active-class="page-item disabled"
          cs-pager-link-current-class="page-link"
          cs-pager-link-other-class="page-link">
      </cs-pager>
