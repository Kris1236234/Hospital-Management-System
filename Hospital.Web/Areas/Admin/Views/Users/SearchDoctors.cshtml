@using hospitals.Utilities
@model PagedResult<Hospital.ViewModels.ApplicationUserViewModel>
<form asp-action="SearchDoctors">
    <input type="text" name="Spicility" />
    <input type="submit" value="search"/>
    <div >
        @if (@Model.Data.Count != 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            CzyDoktor
                        </th>
                        <th>
                            Imie
                        </th>
                        <th>
                            NazwaUzytkownika
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Płeć
                        </th>
                        <th>
                            Miasto
                        </th>
                        <th>
                            Specjalista
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Data)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsDoctor)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Gender)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.City)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Specialist)
                            </td>
                            <td>
                                @* @Html.ActionLink("Edit", "Edit", new {  id=item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new {  id=item.Id})*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</form>